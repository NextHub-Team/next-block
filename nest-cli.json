{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "config/secrets/**/*",
        "outDir": "dist/config/secrets",
        "watchAssets": true
      },
      {
        "include": "providers/**/config/secrets/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}
